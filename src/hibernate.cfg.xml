<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>

		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property> 
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/banglin</property>
        <property name="show_sql">true</property>
        
		<mapping resource="com/company/data/ho/Company.hbm.xml" />
		<mapping resource="com/company/data/ho/Cp.hbm.xml" />
		<mapping resource="com/company/data/ho/New.hbm.xml" />
		<mapping resource="com/company/data/ho/Onlineuser.hbm.xml" />
		<mapping resource="com/company/data/ho/Pp.hbm.xml" />
		<mapping resource="com/company/data/ho/Usr.hbm.xml" />
		<mapping resource="com/company/data/ho/Zhengshu.hbm.xml" />

	</session-factory>
</hibernate-configuration>
